#!/usr/bin/python
import sys
from os import path

roundup_path = path.realpath(path.join(path.dirname(__file__), '../'))
# roundup_path = "/opt/roundup"


sys.path.append(roundup_path)


from roundup.scripts.roundup_admin import run
from roundup.hyperdb import DatabaseError


while True:
    try:
        run()
    except DatabaseError:
        pass
    else:
        break
